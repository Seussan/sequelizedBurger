<img src="../assets/img/BobsBurgers.png" alt="BobsBurgers Logo">

<h1>Eat-Da-Burger!</h1>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-md-offset-2 col-lg-4 col-lg-offset-2">
      <h3>Ready to Eat!</h3>
      <div id="ready_to_eat">
        <ul>
          {{#each burgers}}
          {{#unless this.devoured}}
            <form action="/{{this.id}}?_method=PUT" method="POST">
              <div class="input-group">
               <li class="form-control">{{this.id}}. {{this.burger_name}} </li>
               <input type="hidden" name="devoured" value="true">
               <span class="input-group-btn">
                <button class="btn btn-primary" type="submit">Devour it!</button>
               </span>
              </div>
            </form>
          {{/unless}}
          {{/each}}
        </ul>
      </div>
    </div>

    <div class="col-md-4 col-lg-4">
      <h3>Devoured Burgers!</h3>
      <ul>
        {{#each burgers}}
        {{#if this.devoured}}
          <form action="/{{this.id}}?_method=PUT" method="POST">
            <li class="form-control">{{this.id}}. {{this.burger_name}} </li>
            <input type="hidden" name="devoured" value="false">
          </form>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <form class="create-update-form" action="/" method="POST">
  
      <div class="form-group">
        <label for="bu">Burger Name:</label>
        <input type="text" id="bu" name="burger_name">
      </div>
  
      <button type="submit" class="btn btn-primary">Submit</button>
  
      <h5>Enter a burger you want to eat then click the "Submit" button.</h5>
  
    </form>
  </div>
</div>